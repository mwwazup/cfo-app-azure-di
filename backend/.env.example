# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_SECONDS=3600

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# API Configuration
API_HOST=0.0.0.0
API_PORT=5180

# Azure Document Intelligence (required for document analysis)
DI_ENDPOINT=https://your-di-resource.cognitiveservices.azure.com/
DI_KEY=your_azure_di_key
# Set to your custom model ID for P&L processing (e.g., PNL)
DI_MODEL_ID=PNL

# Other Services
OPENAI_API_KEY=your_openai_key
ZEP_API_URL=your_zep_url
ZEP_API_KEY=your_zep_key
NEO4J_URI=your_neo4j_uri
NEO4J_USERNAME=your_neo4j_user
NEO4J_PASSWORD=your_neo4j_password

# Optional: speed up local dev by skipping external service checks on startup
SKIP_SERVICE_CHECKS=1

# Optional: database password for local dev/scripts
SUPABASE_DB_PASSWORD=your_db_password
