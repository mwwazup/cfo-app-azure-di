# Frontend Environment Variables Example
# Copy this file to .env.local and fill in your values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# API Configuration
VITE_API_URL=http://localhost:8000  # Backend API URL

# Azure Document Intelligence Configuration
# Get these from your Azure Portal > Document Intelligence resource
DI_ENDPOINT=https://your-document-intelligence-resource.cognitiveservices.azure.com
DI_KEY=your_document_intelligence_key
DI_MODEL_ID==PNL
DI_API_VERSION=2024-07-31

# ARCHIVED: Mindee Configuration (no longer used)
# VITE_MINDEE_API_KEY=your_mindee_api_key
# VITE_MINDEE_MODEL_ID=your_mindee_model_id

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_DEBUG=false


SKIP_SERVICE_CHECKS=1   # skip calls to Supabase / Neo4j / OpenAI during tests
SKIP_DB=1               # skip all Postgres queries so tests pass without a DB